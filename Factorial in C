#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

void main()
{
    int n,ans;


    printf("Enter An integer for factorial : ");
    scanf("%d",&n);

     ans = fact(n);

    printf("answer is %d\n",ans);
                /*this program is able to execute only 1 to 12 factorials!!!*/

}

 int fact(n)
{
  int result;

  if(n==0)
        return 1;

    else

    /*recursions*/

    result=n*fact(n-1);

        return result;

}
